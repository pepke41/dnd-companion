{{#paper-toolbar}}
  {{#paper-toolbar-tools}}
    <h2>{{infoType}}</h2>
    <span class="flex"></span>
    {{#paper-button iconButton=true click=(action new)}}
      {{paper-icon "add-circle"}}
    {{/paper-button}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}

{{#if itemEdited}}
  {{add-info
    type=infoType
    nameValue=itemEdited.name
    descriptionValue=itemEdited.description
    handleSubmit=(action 'updateItem')
    closeAction=(action 'closeDialog')
  }}
{{/if}}
{{#paper-list}}
  {{#each list as |item|}}
    {{#paper-item class="md-3-line"}}
      <div class="md-list-item-text">
        <h3>{{item.name}}</h3>
        {{html-safe item.description}}
      </div>
      {{paper-divider}}
      {{#paper-button click=(action deleteItem item)}}Delete{{/paper-button}}
      {{#paper-button click=(action 'editItem' item)}}Edit{{/paper-button}}
    {{/paper-item}}
  {{/each}}
{{/paper-list}}

